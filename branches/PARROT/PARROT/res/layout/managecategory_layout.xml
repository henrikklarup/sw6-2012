<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/categorymon"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rlspincat"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:background="#00ff00"
        android:orientation="vertical" >

        <Spinner
            android:id="@+id/profiles"
            android:layout_width="match_parent"
            android:layout_height="75dp" />

        <ListView
            android:id="@+id/categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/trash"
            android:layout_below="@+id/profiles"
            android:entries="@layout/categoriesitem" >

        </ListView>

        <ImageView
            android:id="@+id/trash"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/stop" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rlinfoall"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/rlspincat"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="501dp"
            android:background="#ff0000" >
        </RelativeLayout>

        <GridView
            android:id="@+id/pictograms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0000ff" >

        </GridView>
    </LinearLayout>

</RelativeLayout>
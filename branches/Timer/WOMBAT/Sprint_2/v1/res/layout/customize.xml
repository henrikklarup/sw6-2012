            android:textSize="40dp" /> -->

        <!-- <LinearLayout
            android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:orientation="horizontal">
	         -->

            <Button
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:drawableTop="@drawable/thumbnail_hourglass"
                android:layout_gravity="center"
                android:paddingTop="20dp"
                android:text="@string/customize_hourglass_description"
                android:textSize="14dp" />

            <Button
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:drawableTop="@drawable/thumbnail_timetimer"
                android:layout_gravity="center"
                android:paddingTop="20dp"
                android:text="@string/customize_timetimer_description"
                android:textSize="14dp" />

            <Button
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:drawableTop="@drawable/thumbnail_progressbar"
                android:layout_gravity="center"
                android:paddingTop="20dp"
                android:text="@string/customize_progressbar_description"
                android:textSize="14dp" />
            
            <Button
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:drawableTop="@drawable/thumbnail_digital"
                android:layout_gravity="center"
                android:paddingTop="20dp"
                android:text="@string/customize_digital_description"
                android:textSize="14dp" />
        <!-- </LinearLayout>
         -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >
            <TimePicker
                android:id="@+id/timePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >
